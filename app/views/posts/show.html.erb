<div class = "container">
<p id="notice"><%= notice %></p>
 
<p>
  <b>Name:</b>
  <%= @post.name %>
</p>
 
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<div id = "comment" class = "container">
  <h2>Comments</h2>
  <hr>
  <% @post.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
    
  <p>
  <%= link_to 'Delete Comment', [comment.post, comment],
                :confirm => 'Are you sure?',
                :method => :delete %>
  </p>
 
  <hr>
  <% end %>
  
</div> 



<h2>Add a comment:</h2>
<%= render "comments/form" %>

