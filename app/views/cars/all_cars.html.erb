<div class="container">
<h2>All Cars</h2>
<% @allCars.each do |car| %>
      <div id="responsive" class="container ">
          <% if car.image %>
            <%= link_to (image_tag car.image), car_path(car.id) %>
          <% end %>
          </div>
           <p><b><%= car.make%></b>, <%= car.model%>, <%= car.year %></p>
         
        
      </div>
      <br>
    <% end %>
      
</div>